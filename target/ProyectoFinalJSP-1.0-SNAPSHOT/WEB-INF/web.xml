<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Configuración de sesión -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Definición de servlets 
    <servlet>
        <servlet-name>RegistrarProyectoServlet</servlet-name>
        <servlet-class>servlet.RegistrarProyectoServlet</servlet-class>
    </servlet>-->
    
    <!-- Registro del servlet ProyectoServlet -->
    <servlet>
        <servlet-name>RegistrarProyectoServlet</servlet-name>
        <servlet-class>servlet.RegistrarProyectoServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegistrarTareaServlet</servlet-name>
        <servlet-class>servlet.RegistrarTareaServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ListarProyectoServlet</servlet-name>
        <servlet-class>servlet.ListarProyectoServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ListarTareasServlet</servlet-name>
        <servlet-class>servlet.ListarTareasServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EliminarProyectoServlet</servlet-name>
        <servlet-class>servlet.EliminarProyectoServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EliminarTareaServlet</servlet-name>
        <servlet-class>servlet.EliminarTareaServlet</servlet-class>
    </servlet>

    <!-- Mapeo de servlets 
    <servlet-mapping>
        <servlet-name>RegistrarProyectoServlet</servlet-name>
        <url-pattern>/registrarProyecto</url-pattern>
    </servlet-mapping>-->
    
       <!-- Mapeo de la URL del servlet -->
    <servlet-mapping>
        <servlet-name>RegistrarProyectoServlet</servlet-name>
        <url-pattern>/RegistrarProyectoServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegistrarTareaServlet</servlet-name>
        <url-pattern>/RegistrarTareaServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ListarProyectoServlet</servlet-name>
        <url-pattern>/listaProyecto</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ListarTareasServlet</servlet-name>
        <url-pattern>/ListarTareasServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EliminarProyectoServlet</servlet-name>
        <url-pattern>/eliminarProyecto</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EliminarTareaServlet</servlet-name>
        <url-pattern>/eliminarTarea</url-pattern>
    </servlet-mapping>

</web-app>
